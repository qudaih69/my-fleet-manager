{% extends 'base.html.twig' %}
{% block title %}Vehicle Stats{% endblock %}
{% block description %}{% endblock %}
{% block body %}
{% block content %}
  <div class="container container-fluid">

    {{ include('expenses/filter.html.twig') }}

    {% if totalExpenseByVechicleChart.data  %}
    <div class="row">
      <div class="col-lg-8">
        {{ render_chart(totalExpenseByVechicleChart) }}
      </div>
    </div>

      <table class="table table-striped table-bordered">
        <thead>
            <tr>
              {% for key, label in totalExpenseByVechicleChart.data.labels %}
                <th>{{ label }}</th>
              {% endfor %}
            </tr>
        </thead>
        <tbody>
            <tr>
             {% for key, label in totalExpenseByVechicleChart.data.labels %}
                <th><a href="/vehicle-expenses/{{label}}">Expenses Details</a></th>
              {% endfor %}
            </tr>
        </tbody> 
    </table>
    {% endif %}

  </div>
{% endblock %}
{% endblock %}